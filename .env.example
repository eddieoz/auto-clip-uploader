VIDEO_FOLDER="input/"
# CHANNEL_NAME="your-channel-name"
POSTIZ_API_KEY="your-postiz-api-key-here"

# Postiz API endpoint - change this to test different configurations
# Base API URL - specific endpoints will be appended (e.g. /public/v1/upload)
POSTIZ_ENDPOINT="https://your-postiz-instance.com/api"

POSTIZ_TWITTER_CHANNEL_ID="your-twitter-channel-id"
POSTIZ_INSTAGRAM_CHANNEL_ID="your-instagram-channel-id"
POSTIZ_YOUTUBE_CHANNEL_ID="your-youtube-channel-id"
POSTIZ_TIKTOK_CHANNEL_ID="your-tiktok-channel-id"
POSTIZ_NOSTR_CHANNEL_ID="your-nostr-channel-id"
POSTIZ_BSKY_CHANNEL_ID="your-bsky-channel-id"
POSTIZ_MASTODON_CHANNEL_ID="your-mastodon-channel-id"

# Platform configuration - supports both old boolean format and new comma-separated format
# Old format (backward compatible): true/false - uses global POSTIZ_POSTING_TIME
# New format: "enabled, posting_time" - allows platform-specific scheduling
PUBLISH_TO_TWITTER=true
PUBLISH_TO_INSTAGRAM=true
PUBLISH_TO_YOUTUBE=true
PUBLISH_TO_TIKTOK=false
PUBLISH_TO_NOSTR=false
PUBLISH_TO_BSKY=false
PUBLISH_TO_MASTODON=false


# Examples of new comma-separated format:
# PUBLISH_TO_TWITTER="true, now"                    # Enable Twitter with immediate posting
# PUBLISH_TO_INSTAGRAM="true, now + 1 hour"         # Enable Instagram with 1-hour delay
# PUBLISH_TO_YOUTUBE="true, now + 2 hours"          # Enable YouTube with 2-hour delay
# PUBLISH_TO_TIKTOK="false"                         # Disable TikTok (time ignored)

# Global posting time configuration (fallback for platforms without specific times)
# Used when platforms are configured with old boolean format (true/false)
# Supported formats:
# - "now" (default) - immediate posting
# - "now + 5 minutes" - schedule 5 minutes from now
# - "now + 30 minutes" - schedule 30 minutes from now  
# - "now + 2 hours" - schedule 2 hours from now
POSTIZ_POSTING_TIME="now"

# Development/Testing mode - set to "true" to enable mock posting for testing
POSTIZ_MOCK_MODE="false"